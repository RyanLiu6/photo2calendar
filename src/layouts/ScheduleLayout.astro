---
import BaseLayout from '@/layouts/BaseLayout.astro';

interface Props {
  title?: string;
  scheduleId: string;
}

const { title, scheduleId } = Astro.props;
---

<BaseLayout title={title}>
  <section class="flex flex-col justify-center items-center pb-8">
    <h1 class="font-bold text-3xl pb-4">Your Schedule</h1>
    <p class="text-sm">Schedule ID: {scheduleId}</p>
    <p class="text-sm">This schedule will be available for 1 hour</p>
  </section>

  <slot />
</BaseLayout>
